<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCardAdmin"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/recImageAdmin"
                android:src="@drawable/uploadp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/recTitleAdmin"
                android:text="Title"
                android:textColor="@color/brown"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/recImageAdmin"/>

            <TextView
                android:id="@+id/recLangAdmin"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/recDescAdmin"
                android:layout_marginStart="61dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/recImageAdmin"
                android:text="price"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/recDescAdmin"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/recTitleAdmin"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="12dp"
                android:layout_toEndOf="@id/recImageAdmin"
                android:maxLines="1"
                android:text="desc"
                android:textColor="@color/brown"
                android:textSize="14sp" />

        </RelativeLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>